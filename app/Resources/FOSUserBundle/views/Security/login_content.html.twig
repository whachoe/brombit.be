{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post" class="form-signin">
    <h3 class="form-signin-heading">Welcome Back! Please Sign In</h3>
    <hr class="colorgraph"><br>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

    <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" autofocus="" placeholder="{{ 'security.login.username'|trans }}" />
    <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="{{ 'security.login.password'|trans }}"/>

    <div class="checkbox">
        <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
    </div>

    <input type="submit"
           class="btn btn-lg btn-primary btn-block"
           id="_submit"
           name="_submit"
           value="{{ 'security.login.submit'|trans }}"/>
</form>
