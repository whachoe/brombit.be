<div class="row">
    <div class="col-md-10">
        <h1>Wallet history <span class="badge"> {{ pagination.getTotalItemCount }}</span></h1>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'Date', 'b.date') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'BTC', 'b.btc') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'ETH', 'b.eth') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'XMR', 'b.xmr') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'ZEC', 'b.zec') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'LTC', 'b.ltc') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'Total â‚¬', 'b.totalEuro') }}</th>
            </tr>
            </thead>
            <tbody>
            {% for balance in pagination %}
                <tr>
                    <td>{{ balance.date|date('d/m/Y H:i') }}</td>
                    <td>{{ balance.btc }}</td>
                    <td>{{ balance.eth }}</td>
                    <td>{{ balance.xmr }}</td>
                    <td>{{ balance.zec }}</td>
                    <td>{{ balance.ltc }}</td>
                    <td>{{ balance.totalEuro }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
</div>

<div class="clearfix"></div>